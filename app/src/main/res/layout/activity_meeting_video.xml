<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llMeetingAc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.meeting.MeetingVideoActivity">

    <LinearLayout
        android:id="@+id/llMyself"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/hlView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/llOtherSv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/colorPrimaryDark" />

                <TextView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/colorPrimaryDark" />

                <TextView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/colorPrimaryDark" />

                <TextView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/colorPrimaryDark" />

                <TextView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/colorPrimaryDark" />

                <TextView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/colorPrimaryDark" />

                <TextView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/colorPrimaryDark" />

            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/llOper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/hlView"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:padding="@dimen/dp_10">

            <ImageView
                android:id="@+id/ivReceiver"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@drawable/rc_voip_mute_hover" />

            <ImageView
                android:id="@+id/ivAmplification"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@drawable/rc_voip_handfree_hover" />

            <ImageView
                android:id="@+id/ivFinish"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@drawable/rc_voip" />

            <ImageView
                android:id="@+id/ivVideo"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@drawable/rc_voip_icon_camera" />

            <ImageView
                android:id="@+id/ivCamera"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@drawable/rc_voip_camera_hover" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="发起的会议（6/10）"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

</RelativeLayout>