<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
        android:opacity="opaque">
    <item>
        <bitmap
                android:gravity="fill_horizontal|fill_vertical"
                android:src="@drawable/ic_splash" />
    </item>
    <item
            android:width="@dimen/dp_80"
            android:height="@dimen/dp_80"
            android:bottom="@dimen/dp_200"
            android:gravity="center">
        <bitmap
                android:gravity="center|fill_horizontal|fill_vertical"
                android:src="@drawable/ic_logo" />
    </item>
       <item android:gravity="bottom" android:bottom="@dimen/dp_35">

           <bitmap
                   android:gravity="bottom"
                   android:src="@drawable/b_quan"/>
       </item>
</layer-list>